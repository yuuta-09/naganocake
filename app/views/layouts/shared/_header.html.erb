        <%# 未ログインユーザここから %>
        <% else %>

          <li class="nav-item mr-4">
            <%= link_to "About", about_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "商品一覧", items_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "新規登録", new_customer_registration_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "ログイン", new_customer_session_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>

        <% end %>
      </ul>
      <%# 検索フォームここから %>
      <div class="ml-auto mr-4">
        <% if admin_signed_in? %>

          <%= render 'layouts/shared/search-form', form_url: admin_items_path %>

        <% else %>
          
          <%= render 'layouts/shared/search-form', form_url: items_path %>

        <% end %>
      </div>
    </div>
  </nav>

  <hr class="my-0">
</header>