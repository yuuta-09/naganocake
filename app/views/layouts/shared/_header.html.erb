    <div class="collapasee navbar-collapse mx-0 d-flex flex-column  ">
      <%# 未実装のリンクは # とする %>
      <ul class="navbar-nav ml-auto flex-sm-row mb-3">
        <%# adminのリンクここから %>
        <% if admin_signed_in? %>

          <li class="nav-item mr-4">
            <%= link_to "商品一覧", admin_items_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "会員一覧", admin_customers_path, class: "border rounded p-2 nav-link text-dark" %>
