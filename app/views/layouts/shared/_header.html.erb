          <li class="nav-item mr-4">
            <%= link_to "注文履歴一覧", "#", class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "ジャンル一覧", admin_genres_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "ログアウト", destroy_admin_session_path, class: "border rounded p-2 nav-link text-dark", method: :delete %>
          </li>
        
        <%# customerのリンクここから %>
        <% elsif customer_signed_in? %>

          <li class="nav-item mr-4">
            <%= link_to "マイページ", customer_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "商品一覧", items_path, class: "border rounded p-2 nav-link text-dark" %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to "カート", "#", class: "border rounded p-2 nav-link text-dark" %>
