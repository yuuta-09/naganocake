<h2 class="d-inline-block bg-light mx-5 px-4 mb-5">配送先登録 / 一覧</h2>

<div class="row px-4 mb-5">
  <div class="col">
    <%= render 'public/addresses/shared/form', model: @address %>
  </div>
</div>

<div class="row">
  <div class="col-auto">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛先</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <div class="flex">
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, data: {confirm: "削除すると元に戻せません。\n本当によろしいですか？"}, class: "btn btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>